<!doctype html>
<html lang="en">
  <head>
      <title>{% block title %}Study Group microsite 2014{% endblock %}</title>
      <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
      <meta charset="UTF-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
      <link rel="shortcut icon" type="image/ico" href="/favicon.ico" />
      <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
      <link rel="apple-touch-icon" sizes="57x57" href="/apple-touch-icon-57x57.png" />
      <link rel="apple-touch-icon" sizes="72x72" href="/apple-touch-icon-72x72.png" />
      <link rel="apple-touch-icon" sizes="76x76" href="/apple-touch-icon-76x76.png" />
      <link rel="apple-touch-icon" sizes="114x114" href="/apple-touch-icon-114x114.png" />
      <link rel="apple-touch-icon" sizes="120x120" href="/apple-touch-icon-120x120.png" />
      <link rel="apple-touch-icon" sizes="144x144" href="/apple-touch-icon-144x144.png" />
      <link rel="apple-touch-icon" sizes="152x152" href="/apple-touch-icon-152x152.png" />
      <link type="text/css" rel="stylesheet" href="http://fast.fonts.net/cssapi/ce7f315f-8738-4f0f-a6c1-439e443fbbb2.css"/>
      {{ "bootstrap.css" | asset_url | stylesheet_tag }}
      {{ "style.css" | asset_url | stylesheet_tag }}
      {% block styles %}{% endblock %}
      <!--[if lt IE 9]>
          <script src="app/js/html5shiv.js"></script>
      <![endif]-->
  </head>
  <!-- ***** IMPORTANT ***** -->
  <!-- ONTOUCHSTART="" MAKES THE LINKS MORE USER-FRIENDLY IN TOUCH DEVICES -->
  <!-- ***** /IMPORTANT ***** -->
  <body ontouchstart="">
    {% block content %}{% endblock %}

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    {{ "bootstrap.js" | asset_url | script_tag }}
    <!-- NOT USED. Used jQuery's animate() instead {{ "jquery.smooth-scroll.min.js" | asset_url | script_tag }} -->
    {{ "app.js" | asset_url | script_tag }}
    
    {% block scripts %}{% endblock %}
  </body>
</html>